{
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid",
    "proseWrap": "always",
    
    "htmlWhitespaceSensitivity": "ignore", 
    "doctypeLowerCase": true,

    "html.format.wrapAttributes": "force-aligned",
    "html.format.wrapLineLength": 0,
    "html.format.wrapAttributesIndentSize": 4
  }
  